package components

import (
	"fmt"
)

type UserinfoProps struct {
	Name  string
	Email string
}

templ Userinfo(user UserinfoProps) {
	<section
		id="userinfo"
		class="flex gap-4 justify-center items-center"
	>
		<div>
			logged in as:
			{ fmt.Sprintf("%s (%s)", user.Name, user.Email) }
		</div>
		<button class="btn" hx-post="/logout">Logout</button>
	</section>
}
