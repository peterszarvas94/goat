package views

func getTitle(matter map[string]any) string {
	if title, ok := matter["title"].(string); ok {
		return title
	}
	return ""
}

// this is the template of out md files
templ Md(htmlContent string, matter map[string]any) {
	<h1 class="title">{ getTitle(matter) }</h1>
	<div>
		@templ.Raw(htmlContent)
	</div>
	<footer>
		this is footer hello
	</footer>
}
